<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.myojssm.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="org.example.myojssm.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <insert id="insertCategory">
        insert into category(name, description)
        values (#{name}, #{description});
    </insert>
    <update id="updateCategoryById">
        update category
        set name        = #{name},
            description = #{description},
            update_time = now()
        where id = #{id}
    </update>
    <select id="queryAllCategory" resultMap="BaseResultMap">
        select *
        from category
    </select>
    <select id="queryCategoryById" resultMap="BaseResultMap">
        select *
        from category
        where id = #{id}
    </select>
</mapper>
